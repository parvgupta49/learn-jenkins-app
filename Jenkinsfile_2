pipeline {
    agent any
    stages {
        stage('Hello') {
            agent {
                docker {
                    image 'node:18-alpine'
                }
            }
            steps {
                sh 'npm ci'
                sh 'npm run build'
            }
        }
        stage('Test') {
            agent {
                docker {
                    image 'node:18-alpine'
                }
            }
            steps {
                sh 'test -f build/index.html'
                sh 'npm test'
            }
        }
    }
    post {
        always {
            junit 'test-results/junit.xml'
        }
    }
}
