pipeline {
    agent {
        docker {
            image 'node:18-alpine'
        }
    }
    stages {
        stage('Hello') {
            steps {
                sh 'npm ci'
                sh 'npm run build'
            }
        }
        stage('Test') {
            steps {
                sh 'test -f build/index.html'
                sh 'npm test'
            }
        }
    }
    post {
        always {
            junit 'test-results/junit.xml'
        }
    }
}
